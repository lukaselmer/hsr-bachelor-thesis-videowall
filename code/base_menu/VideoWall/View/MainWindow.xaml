<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:View="clr-namespace:View" Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
            <View:MenuView Grid.Row="0" DataContext="{Binding}"></View:MenuView>
            <View:PosterView Grid.Row="1" DataContext="{Binding PosterViewModel}"></View:PosterView>
    </Grid>
</Window>
