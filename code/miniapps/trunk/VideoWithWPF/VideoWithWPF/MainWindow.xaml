<Window x:Class="VideoWithWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        WindowState="Maximized"
        WindowStyle="None">
    <StackPanel>
        <MediaElement Name="video" Source="Resources/Wildlife.wmv" LoadedBehavior="Manual" UnloadedBehavior="Manual" />
        <Button Click="PlayButtonClick">Play</Button>
    </StackPanel>
</Window>
