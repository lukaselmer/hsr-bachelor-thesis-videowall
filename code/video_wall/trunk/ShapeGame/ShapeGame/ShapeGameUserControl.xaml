                                      Kinect="{Binding ElementName=SensorChooser,Path=Kinect}"/>-->
                <!--<kt:KinectSensorChooser Margin="0,18,19,0" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="SensorChooser" />-->
            </Grid>
        </StackPanel>
    </Grid>
