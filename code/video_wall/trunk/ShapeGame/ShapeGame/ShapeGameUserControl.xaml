             Loaded="WindowLoaded" >
    <!-- Closed="WindowClosed" Closing="WindowClosing"-->
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#fff" Offset="0.05" />
