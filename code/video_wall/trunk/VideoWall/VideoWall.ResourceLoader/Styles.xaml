<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MenuButtonStyle" TargetType="{x:Type Button}" BasedOn="{x:Null}">
        <!--<Setter Property="Foreground" Value="White"/>-->
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid x:Name="Grid" Height="60" Margin="1 0">
                        <Border Background="{TemplateBinding Background}" x:Name="Border" BorderThickness="0" Padding="20 0" />
                        <ContentPresenter TextBlock.Foreground="{TemplateBinding Foreground}" Margin="20 0"
                                          HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
